{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/atoms/*": [
        "atoms/*"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/public/*": [
        "public/*"
      ],
      "@/pages/*": [
        "pages/*"
      ],
      "@/app/*": [
        "app/*"
      ],
      "@/@types/*": [
        "@types/*"
      ],
      "@/styles/*": [
        "styles/*"
      ],
      "@/libraries/*": [
        "libraries/*"
      ],
      "@/assets/*": [
        "assets/*"
      ],
      "@/contexts/*": [
        "contexts/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
