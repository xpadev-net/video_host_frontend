# API Configuration
# Backend API endpoint URL
NEXT_PUBLIC_API_ENDPOINT=http://localhost:3001/api/v4

# Site Configuration
# Name displayed in browser title and throughout the site
NEXT_PUBLIC_SITE_NAME=Video Host

# Features Configuration
# Enable/disable Niconico-style overlay comments
NEXT_PUBLIC_ENABLE_COMMENTS=true

# User Registration Configuration
# Require signup code for new user registration
# Set to "true" to require signup code, "false" or omit to make it optional
NEXT_PUBLIC_REQUIRE_SIGNUP_CODE=false

# Image Hosting Configuration
# Allowed hostname for external images (optional)
# Used for image CDN configuration
NEXT_PUBLIC_ALLOWED_IMAGE_HOSTNAME=cdn.example.com